# ===========================================
# The Copy - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database (Neon PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://user:password@host/database
POSTGRES_URL=postgresql://user:password@host/database

# ===========================================
# Redis (Caching & Job Queues)
# ===========================================
# Option 1: Individual variables (recommended for Docker/local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Option 2: Redis URL (recommended for cloud providers)
# REDIS_URL=redis://:password@host:6379
# Or without password: REDIS_URL=redis://localhost:6379

# ===========================================
# Google Generative AI (Gemini)
# ===========================================
GOOGLE_GENAI_API_KEY=your_gemini_api_key

# ===========================================
# Sentry (Error Tracking & Performance Monitoring)
# ===========================================
# Get these from https://sentry.io/settings/
NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-auth-token

# ===========================================
# API Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3000
BACKEND_URL=http://localhost:3000

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=your_jwt_secret_key_min_32_chars
SESSION_SECRET=your_session_secret_key

# ===========================================
# Firebase (if used)
# ===========================================
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# ===========================================
# Vercel Storage (if used)
# ===========================================
BLOB_READ_WRITE_TOKEN=

# ===========================================
# Image Optimization
# ===========================================
# JSON array of remote image patterns
# Example: [{"protocol":"https","hostname":"example.com","port":"","pathname":"/**"}]
NEXT_IMAGE_REMOTE_PATTERNS=

# ===========================================
# Lighthouse CI (Optional)
# ===========================================
LHCI_GITHUB_APP_TOKEN=your_github_token

# ===========================================
# Environment
# ===========================================
NODE_ENV=development
# NODE_ENV=production

# ===========================================
# Build Configuration
# ===========================================
# Set to 'true' to analyze bundle sizes
ANALYZE=false

# Set to 'true' to skip environment validation during build
SKIP_ENV_VALIDATION=false

# ===========================================
# Performance Optimization Settings
# ===========================================
# Enable/disable specific features
ENABLE_REDIS_CACHE=true
ENABLE_BACKGROUND_JOBS=true
ENABLE_SENTRY=true

# ===========================================
# Rate Limiting
# ===========================================
# Rate limit windows (in minutes)
RATE_LIMIT_AUTH_WINDOW=15
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AI_WINDOW=60
RATE_LIMIT_AI_MAX=20
RATE_LIMIT_GENERAL_WINDOW=15
RATE_LIMIT_GENERAL_MAX=100

# ===========================================
# Server Configuration
# ===========================================
PORT=3000
FRONTEND_PORT=5000

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=http://localhost:5000

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
# LOG_LEVEL=debug
# LOG_LEVEL=error
