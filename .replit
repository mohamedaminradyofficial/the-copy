modules = ["nodejs-20", "web", "bash", "nix"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37615
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Express Backend"

[[workflows.workflow]]
name = "Next.js Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && pnpm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Express Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm run dev"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd frontend && pnpm run start"]
build = ["bash", "-c", "cd frontend && pnpm run build"]
